    <script>

        function idCheck() {
            const userId = document.getElementById('userId').value; // 입력된 ID 가져오기

            fetch('/id-check', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId: userId }), // 인증 코드와 이메일 전송
            })
                .then(response => response.json())
                .then(result => {
                    if (result.exists) {
                        alert('이미 사용중인 아이디입니다.');
                    } else {
                        alert('사용가능한 아이디입니다.');
                    }
                });
        }

        function validateUserId(input) {
            const regex = /^[a-zA-Z0-9]*$/; // 영어와 숫자만 허용
            if (!regex.test(input.value)) {
                alert("아이디는 영어와 숫자만 사용할 수 있습니다.");
                input.value = input.value.replace(/[^a-zA-Z0-9]/g, ""); // 허용되지 않은 문자는 제거
            }
        }

        function validatePassword(password) {
            // 정규식: 문자, 숫자, 특수문자를 포함하며 최소 8자 이상
            const passwordRegex = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

            if (!passwordRegex.test(password)) {
                return false;
            }
            return true;
        }


        function register() {
            const userId = document.getElementById('userId').value;
            const password = document.getElementById('password').value;
            const password_confirm = document.getElementById('password_confirm').value;
            const nickname = document.getElementById('nickname').value;
            const email = document.getElementById('email').value;
            const terms = document.getElementById('terms').checked;
            const privacy = document.getElementById('privacy').checked;
            const marketing = document.getElementById('marketing').checked;

            if (!userId) {
                alert("아이디를 입력해주세요.");
                return;
            }

            if (!password && !password_confirm) {
                alert("비밀번호를 입력해주세요.");
                return;
            }

            if (!validatePassword(password)) {
                alert("비밀번호는 문자, 숫자, 특수문자를 포함하며 최소 8자 이상이어야 합니다.");
                return;
            }

            if (password !== password_confirm) {
                alert("비밀번호가 일치하지 않습니다. 다시 확인해주세요.");
                return;
            }

            if (!nickname) {
                alert("이름을 입력해주세요.");
                return;
            }

            if (!terms || !privacy) {
                alert("필수항목에 동의해주세요.");
                return;
            }

            fetch('/register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    userId: userId,
                    password: password,
                    nickname: nickname,
                    email: email,
                    terms: terms,
                    privacy: privacy,
                    marketing: marketing
                }),
            })
                .then(response => response.json())
                .then(data => {
                    if (data.message === '이메일 인증이 필요합니다.') {
                        alert('이메일 인증을 완료해 주세요.');
                        window.location.href = '/verifyEmail';  // 인증 페이지로 리디렉션
                    } else {
                        alert("회원가입이 완료 되었습니다.");
                        window.location.href = '/login';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }


        // 이용약관
        document.getElementById('Terms-text').addEventListener('click', function () {
            // 팝업 창 열기
            window.open('/a1', 'popupWindow', 'width=600,height=400');
        });

        // 개인정보수집동의
        document.getElementById('privacy-text').addEventListener('click', function () {
            // 팝업 창 열기
            window.open('/a2', 'popupWindow', 'width=600,height=400');
        });

        // 마케팅 수신 동의
        document.getElementById('marketing-text').addEventListener('click', function () {
            // 팝업 창 열기
            window.open('/a3', 'popupWindow', 'width=600,height=400');
        });
    </script>
