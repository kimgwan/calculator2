<nav class="bg-white shadow">
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <% if (user) { %>
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <img class="h-8 w-auto" src="/images/logo.png" alt="Logo" />
                    </div>
                    <!-- Desktop menu -->
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a href="/materials"
                            class="border-transparent text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">재료관리</a>
                        <a href="/products"
                            class="border-transparent text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">상품관리</a>
                        <a href="#"
                            class="border-transparent text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">문의/건의사항</a>
                    </div>
                </div>
                <div class="flex items-center">
                    <span class="text-gray-700 mr-4">환영합니다 <%= user.nickname %>대표님!</span>
                    <button
                        class="!rounded-button bg-white border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"><a href="/logout">로그아웃</a></button>
                </div>
                <% } else { %>
                    <!-- 로그인, 회원가입 버튼을 오른쪽으로 이동 -->
                    <div class="ml-auto flex items-center">
                        <button 
                            class="!rounded-button bg-white border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"><a href="/login">로그인</a></button>
                        <button 
                            class="!rounded-button bg-black border border-gray-300 px-4 py-2 text-sm font-medium text-white hover:bg-gray-700" style="margin-left: 10px;"><a href="/signup">회원가입</a></button>
                    </div>
                <% } %>
            <!-- Mobile menu button -->
            <div class="-mr-2 flex items-center sm:hidden">
                <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" aria-controls="mobile-menu" aria-expanded="false" id="mobile-menu-button">
                    <span class="sr-only">Open main menu</span>
                    <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu, hidden by default -->
    <div class="sm:hidden" id="mobile-menu" style="display: none;">
        <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/materials"
                class="text-gray-500 hover:text-gray-700 block px-3 py-2 rounded-md text-base font-medium">재료관리</a>
            <a href="/products"
                class="text-gray-500 hover:text-gray-700 block px-3 py-2 rounded-md text-base font-medium">상품관리</a>
            <a href="#"
                class="text-gray-500 hover:text-gray-700 block px-3 py-2 rounded-md text-base font-medium">문의/건의사항</a>
        </div>
    </div>
</nav>

<script>
    // JavaScript to toggle the mobile menu
    const menuButton = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    menuButton.addEventListener('click', () => {
        menu.style.display = menu.style.display === 'none' || menu.style.display === '' ? 'block' : 'none';
    });
</script>
