<body class="font-['Noto_Sans_KR'] antialiased">

    <%- include('nav.ejs') %>

        <main class="pt-16">
            <section class="relative bg-white overflow-hidden">
                <div class="max-w-8xl mx-auto">
                    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:pb-28 xl:pb-32">
                        <div class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                            <div class="sm:text-center lg:text-left">
                                <h1 class="text-4xl tracking-tight font-bold text-gray-900 sm:text-5xl md:text-6xl">
                                    <span class="block">더 이상 엑셀로</span>
                                    <span class="block text-custom">계산하지 마세요</span>
                                </h1>
                                <p
                                    class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                                    똑똑한 사장님들이 사용하는 더 스마트한 원가계산기
                                </p>
                                <% if (user) { %>
                                    <% } else { %>
                                <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                                    <div> <a href="/signup"><button type="button"
                                            class="!rounded-button w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium text-white bg-custom hover:bg-custom/90 md:py-4 md:text-lg md:px-10">
                                            무료로 시작하기
                                        </button></a>
                                    </div>                                    
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <div
                            class="relative w-full h-64 sm:h-72 md:h-96 lg:h-full lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full">
